{
  "name": "vscode-social-presence",
  "displayName": "VS Code Social Presence",
  "description": "See your friends' coding status in the sidebar.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-social-presence.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "vscode-social-presence.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "vscode-social-presence.pinCloseFriend",
        "title": "Pin as Close Friend",
        "icon": "$(pin)"
      },
      {
        "command": "vscode-social-presence.unpinCloseFriend",
        "title": "Unpin Close Friend",
        "icon": "$(pinned)"
      },
      {
        "command": "vscode-social-presence.copyUsername",
        "title": "Copy My Username",
        "icon": "$(clippy)"
      },
      {
        "command": "vscode-social-presence.openSettings",
        "title": "Social Presence Settings",
        "icon": "$(gear)"
      },
      {
        "command": "vscode-social-presence.logout",
        "title": "Logout",
        "icon": "$(sign-out)"
      },
      {
        "command": "vscode-social-presence.connectGitHub",
        "title": "Connect GitHub",
        "icon": "$(github)"
      },
      {
        "command": "vscode-social-presence.createInvite",
        "title": "Create Invite Link",
        "icon": "$(link)"
      },
      {
        "command": "vscode-social-presence.acceptInvite",
        "title": "Accept Invite Code",
        "icon": "$(person-add)"
      },
      {
        "command": "vscode-social-presence.removeConnection",
        "title": "Remove Connection",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "vscode-social-presence.refresh",
          "when": "view == social-presence-view",
          "group": "navigation"
        },
        {
          "command": "vscode-social-presence.openSettings",
          "when": "view == social-presence-view",
          "group": "navigation"
        },
        {
          "command": "vscode-social-presence.createInvite",
          "when": "view == social-presence-view",
          "group": "navigation"
        },
        {
          "command": "vscode-social-presence.acceptInvite",
          "when": "view == social-presence-view",
          "group": "navigation"
        },
        {
          "command": "vscode-social-presence.connectGitHub",
          "when": "view == social-presence-view && !vscode-social-presence:githubConnected",
          "group": "navigation"
        },
        {
          "command": "vscode-social-presence.logout",
          "when": "view == social-presence-view && vscode-social-presence:githubConnected",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "vscode-social-presence.pinCloseFriend",
          "when": "view == social-presence-view && viewItem == user",
          "group": "inline"
        },
        {
          "command": "vscode-social-presence.unpinCloseFriend",
          "when": "view == social-presence-view && viewItem == user",
          "group": "inline"
        },
        {
          "command": "vscode-social-presence.removeConnection",
          "when": "view == social-presence-view && viewItem == user",
          "group": "manage"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "social-presence-sidebar",
          "title": "Social Presence",
          "icon": "$(account)"
        }
      ]
    },
    "views": {
      "social-presence-sidebar": [
        {
          "id": "social-presence-view",
          "name": "Friends"
        }
      ]
    },
    "configuration": {
      "title": "VS Code Social Presence",
      "properties": {
        "vscode-social-presence.username": {
          "type": "string",
          "default": "",
          "description": "Your username for Social Presence."
        },
        "vscode-social-presence.shareProjectName": {
          "type": "boolean",
          "default": true,
          "description": "Share the name of the current project."
        },
        "vscode-social-presence.shareLanguage": {
          "type": "boolean",
          "default": true,
          "description": "Share the current programming language."
        },
        "vscode-social-presence.shareActivity": {
          "type": "boolean",
          "default": true,
          "description": "Share your current activity (Coding, Debugging, Idle)."
        },
        "vscode-social-presence.visibilityMode": {
          "type": "string",
          "enum": [
            "everyone",
            "followers",
            "following",
            "close-friends",
            "invisible"
          ],
          "default": "everyone",
          "description": "Who can see your status: everyone, only followers, only following, only close friends, or invisible (no one)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "compile:server": "tsc server/*.ts --outDir server --module commonjs --target es6 --esModuleInterop --skipLibCheck",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/sqlite3": "^3.1.11",
    "@types/vscode": "^1.106.1",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "jest": "^30.2.0",
    "mocha": "^10.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "better-sqlite3": "^12.5.0",
    "sqlite3": "^5.1.7",
    "ws": "^8.13.0"
  }
}