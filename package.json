{
  "name": "vscode-social-presence",
  "displayName": "VS Code Social Presence",
  "description": "See your friends' coding status in the sidebar.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-social-presence.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "vscode-social-presence.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "vscode-social-presence.pinCloseFriend",
        "title": "Pin as Close Friend",
        "icon": "$(pin)"
      },
      {
        "command": "vscode-social-presence.unpinCloseFriend",
        "title": "Unpin Close Friend",
        "icon": "$(pinned)"
      },
      {
        "command": "vscode-social-presence.copyUsername",
        "title": "Copy My Username",
        "icon": "$(clippy)"
      },
      {
        "command": "vscode-social-presence.openSettings",
        "title": "Social Presence Settings",
        "icon": "$(gear)"
      },
      {
        "command": "vscode-social-presence.logout",
        "title": "Logout",
        "icon": "$(sign-out)"
      },
      {
        "command": "vscode-social-presence.connectGitHub",
        "title": "Connect GitHub",
        "icon": "$(github)"
      },
      {
        "command": "vscode-social-presence.createInvite",
        "title": "Create Invite Link",
        "icon": "$(link)"
      },
      {
        "command": "vscode-social-presence.acceptInvite",
        "title": "Accept Invite Code",
        "icon": "$(person-add)"
      },
      {
        "command": "vscode-social-presence.removeConnection",
        "title": "Remove Connection",
        "icon": "$(trash)"
      },
      {
        "command": "vscode-social-presence.continueAsGuest",
        "title": "Continue as Guest",
        "icon": "$(account)"
      },
      {
        "command": "vscode-social-presence.resetExtension",
        "title": "Reset Extension",
        "icon": "$(clear-all)"
      },
      {
        "command": "vscode-social-presence.signOutGitHub",
        "title": "Sign Out of GitHub",
        "icon": "$(sign-out)"
      },
      {
        "command": "vscode-social-presence.clearCache",
        "title": "Clear Cache",
        "icon": "$(clear-all)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "vscode-social-presence.refresh",
          "when": "view == social-presence-friends || view == social-presence-github",
          "group": "navigation"
        },
        {
          "command": "vscode-social-presence.openSettings",
          "when": "view == social-presence-friends",
          "group": "navigation"
        },
        {
          "command": "vscode-social-presence.createInvite",
          "when": "view == social-presence-friends",
          "group": "navigation"
        },
        {
          "command": "vscode-social-presence.acceptInvite",
          "when": "view == social-presence-friends",
          "group": "navigation"
        },
        {
          "command": "vscode-social-presence.signOutGitHub",
          "when": "view == social-presence-github && vscode-social-presence:githubConnected",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "vscode-social-presence.pinCloseFriend",
          "when": "view == social-presence-github && viewItem == user",
          "group": "inline"
        },
        {
          "command": "vscode-social-presence.unpinCloseFriend",
          "when": "view == social-presence-friends && viewItem == user",
          "group": "inline"
        },
        {
          "command": "vscode-social-presence.removeConnection",
          "when": "view == social-presence-friends && viewItem == user-manual",
          "group": "manage"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "social-presence-sidebar",
          "title": "Social Presence",
          "icon": "$(account)"
        }
      ]
    },
    "views": {
      "social-presence-sidebar": [
        {
          "id": "social-presence-friends",
          "name": "Close Friends & Guests",
          "icon": "$(heart)"
        },
        {
          "id": "social-presence-github",
          "name": "GitHub Network",
          "icon": "$(github)"
        }
      ],
      "explorer": [
        {
          "id": "social-presence-explorer",
          "name": "Friends Online",
          "icon": "$(account)",
          "contextualTitle": "Social Presence"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "social-presence-friends",
        "contents": "Welcome to Social Presence!\nConnect with GitHub to see your network, or continue as a guest to use invite codes.\n[Connect GitHub](command:vscode-social-presence.connectGitHub)\n[Continue as Guest](command:vscode-social-presence.continueAsGuest)",
        "when": "!vscode-social-presence:authenticated"
      },
      {
        "view": "social-presence-github",
        "contents": "Connect to GitHub to see your followers and following online.\n[Connect GitHub](command:vscode-social-presence.connectGitHub)",
        "when": "!vscode-social-presence:githubConnected"
      }
    ],
    "configuration": {
      "title": "VS Code Social Presence",
      "properties": {
        "vscode-social-presence.username": {
          "type": "string",
          "default": "",
          "description": "Your username for Social Presence."
        },
        "vscode-social-presence.shareProjectName": {
          "type": "boolean",
          "default": true,
          "description": "Share the name of the current project."
        },
        "vscode-social-presence.shareLanguage": {
          "type": "boolean",
          "default": true,
          "description": "Share the current programming language."
        },
        "vscode-social-presence.shareActivity": {
          "type": "boolean",
          "default": true,
          "description": "Share your current activity (Coding, Debugging, Idle)."
        },
        "vscode-social-presence.visibilityMode": {
          "type": "string",
          "enum": [
            "everyone",
            "followers",
            "following",
            "close-friends",
            "invisible"
          ],
          "default": "everyone",
          "description": "Control who can see your online status and activity."
        },
        "vscode-social-presence.showInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show online friends count in the status bar."
        },
        "vscode-social-presence.showInExplorer": {
          "type": "boolean",
          "default": true,
          "description": "Show 'Friends Online' section in the Explorer sidebar."
        },
        "vscode-social-presence.showBadge": {
          "type": "boolean",
          "default": true,
          "description": "Show online count badge on the Social Presence icon."
        },
        "vscode-social-presence.clearCache": {
          "type": "null",
          "markdownDescription": "**[Clear Cache](command:vscode-social-presence.clearCache)** - Clear cached data and refresh connections without signing out."
        },
        "vscode-social-presence.resetExtension": {
          "type": "null",
          "markdownDescription": "**[Reset Extension](command:vscode-social-presence.resetExtension)** - Clear all data and return to initial state. Use this if you're experiencing issues."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "compile:server": "tsc server/*.ts --outDir server --module commonjs --target es6 --esModuleInterop --skipLibCheck",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/sqlite3": "^3.1.11",
    "@types/vscode": "^1.106.1",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "jest": "^30.2.0",
    "mocha": "^10.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "better-sqlite3": "^12.5.0",
    "sqlite3": "^5.1.7",
    "ws": "^8.13.0"
  }
}