{
  "name": "Viscord",
  "displayName": "Viscord",
  "description": "See your GitHub friends' real-time coding status in VS Code. Know what your followers and following are working on!",
  "version": "1.0.1",
  "publisher": "CyberTron957",
  "author": {
    "name": "Pradhyun"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/CyberTron957/viscord.git"
  },
  "bugs": {
    "url": "https://github.com/CyberTron957/viscord/issues"
  },
  "homepage": "https://github.com/CyberTron957/viscord#readme",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "keywords": [
    "viscord",
    "social",
    "presence",
    "github",
    "friends",
    "coding",
    "status",
    "collaboration",
    "real-time",
    "websocket"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:viscord-friends",
    "onView:viscord-github",
    "onView:viscord-status",
    "onView:viscord-explorer",
    "onCommand:vscode-viscord.continueAsGuest",
    "onCommand:vscode-viscord.connectGitHub",
    "onCommand:vscode-viscord.openSettings",
    "onCommand:vscode-viscord.createInvite"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-viscord.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "vscode-viscord.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "vscode-viscord.pinCloseFriend",
        "title": "Pin as Close Friend",
        "icon": "$(pin)"
      },
      {
        "command": "vscode-viscord.unpinCloseFriend",
        "title": "Unpin Close Friend",
        "icon": "$(pinned)"
      },
      {
        "command": "vscode-viscord.copyUsername",
        "title": "Copy My Username",
        "icon": "$(clippy)"
      },
      {
        "command": "vscode-viscord.openSettings",
        "title": "viscord Settings",
        "icon": "$(gear)"
      },
      {
        "command": "vscode-viscord.logout",
        "title": "Logout",
        "icon": "$(sign-out)"
      },
      {
        "command": "vscode-viscord.connectGitHub",
        "title": "Connect GitHub",
        "icon": "$(github)"
      },
      {
        "command": "vscode-viscord.createInvite",
        "title": "Create Invite Link",
        "icon": "$(link)"
      },
      {
        "command": "vscode-viscord.acceptInvite",
        "title": "Accept Invite Code",
        "icon": "$(person-add)"
      },
      {
        "command": "vscode-viscord.removeConnection",
        "title": "Remove Connection",
        "icon": "$(trash)"
      },
      {
        "command": "vscode-viscord.continueAsGuest",
        "title": "Continue as Guest",
        "icon": "$(account)"
      },
      {
        "command": "vscode-viscord.resetExtension",
        "title": "Reset Extension",
        "icon": "$(clear-all)"
      },
      {
        "command": "vscode-viscord.signOutGitHub",
        "title": "Sign Out of GitHub",
        "icon": "$(sign-out)"
      },
      {
        "command": "vscode-viscord.clearCache",
        "title": "Clear Cache",
        "icon": "$(clear-all)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "vscode-viscord.refresh",
          "when": "view == viscord-friends || view == viscord-github",
          "group": "navigation"
        },
        {
          "command": "vscode-viscord.openSettings",
          "when": "view == viscord-friends",
          "group": "navigation"
        },
        {
          "command": "vscode-viscord.createInvite",
          "when": "view == viscord-friends",
          "group": "navigation"
        },
        {
          "command": "vscode-viscord.acceptInvite",
          "when": "view == viscord-friends",
          "group": "navigation"
        },
        {
          "command": "vscode-viscord.signOutGitHub",
          "when": "view == viscord-github && vscode-viscord:githubConnected",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "vscode-viscord.pinCloseFriend",
          "when": "view == viscord-github && viewItem == user",
          "group": "inline"
        },
        {
          "command": "vscode-viscord.unpinCloseFriend",
          "when": "view == viscord-friends && viewItem == user",
          "group": "inline"
        },
        {
          "command": "vscode-viscord.removeConnection",
          "when": "view == viscord-friends && viewItem == user-manual",
          "group": "manage"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "viscord-sidebar",
          "title": "viscord",
          "icon": "$(account)"
        }
      ]
    },
    "views": {
      "viscord-sidebar": [
        {
          "id": "viscord-friends",
          "name": "Close Friends & Guests",
          "icon": "$(heart)"
        },
        {
          "id": "viscord-github",
          "name": "GitHub Network",
          "icon": "$(github)"
        },
        {
          "id": "viscord-status",
          "name": "Connection Status",
          "icon": "$(pulse)"
        }
      ],
      "explorer": [
        {
          "id": "viscord-explorer",
          "name": "Friends Online",
          "icon": "$(account)",
          "contextualTitle": "viscord"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "viscord-friends",
        "contents": "Welcome to viscord!\nConnect with GitHub to see your network, or continue as a guest to use invite codes.\n[Connect GitHub](command:vscode-viscord.connectGitHub)\n[Continue as Guest](command:vscode-viscord.continueAsGuest)",
        "when": "!vscode-viscord:authenticated"
      },
      {
        "view": "viscord-github",
        "contents": "Connect to GitHub to see your followers and following online.\n[Connect GitHub](command:vscode-viscord.connectGitHub)",
        "when": "!vscode-viscord:githubConnected"
      }
    ],
    "configuration": {
      "title": "Viscord",
      "properties": {
        "vscode-viscord.username": {
          "type": "string",
          "default": "",
          "description": "Your username for viscord."
        },
        "vscode-viscord.visibilityMode": {
          "type": "string",
          "enum": [
            "everyone",
            "followers",
            "following",
            "close-friends",
            "invisible"
          ],
          "default": "everyone",
          "description": "Control who can see your online status and activity."
        },
        "vscode-viscord.shareProjectName": {
          "type": "boolean",
          "default": true,
          "description": "Share the name of the current project."
        },
        "vscode-viscord.shareLanguage": {
          "type": "boolean",
          "default": true,
          "description": "Share the current programming language."
        },
        "vscode-viscord.shareActivity": {
          "type": "boolean",
          "default": true,
          "description": "Share your current activity (Coding, Debugging, Idle)."
        },
        "vscode-viscord.showInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show online friends count in the status bar."
        },
        "vscode-viscord.showInExplorer": {
          "type": "boolean",
          "default": true,
          "description": "Show 'Friends Online' section in the Explorer sidebar."
        },
        "vscode-viscord.showBadge": {
          "type": "boolean",
          "default": true,
          "description": "Show online count badge on the viscord icon."
        },
        "vscode-viscord.useCustomServer": {
          "type": "boolean",
          "default": false,
          "description": "Enable custom server URL for local testing. Leave disabled to use the official server."
        },
        "vscode-viscord.customServerUrl": {
          "type": "string",
          "default": "ws://localhost:8080",
          "description": "Custom WebSocket server URL (only used when 'Use Custom Server' is enabled)."
        },
        "vscode-viscord.clearCache": {
          "type": "null",
          "markdownDescription": "**[Clear Cache](command:vscode-viscord.clearCache)** - Clear cached data and refresh connections without signing out."
        },
        "vscode-viscord.resetExtension": {
          "type": "null",
          "markdownDescription": "**[Reset Extension](command:vscode-viscord.resetExtension)** - Clear all data and return to initial state. Use this if you're experiencing issues."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "compile": "tsc -p ./",
    "compile:server": "tsc server/*.ts --outDir server --module commonjs --target es6 --esModuleInterop --skipLibCheck",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/sqlite3": "^3.1.11",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "esbuild": "^0.27.1",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "jest": "^30.2.0",
    "mocha": "^10.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "better-sqlite3": "^12.5.0",
    "ioredis": "^5.8.2",
    "sqlite3": "^5.1.7",
    "ws": "^8.13.0"
  }
}
